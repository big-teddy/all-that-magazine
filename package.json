{
  "name": "all-that-magazine",
  "version": "1.0.0",
  "private": true,
  "description": "Premium headless WordPress + Next.js magazine",
  "scripts": {
    "dev": "./dev.sh",
    "setup": "./setup.sh",
    "build:frontend": "cd frontend && npm run build",
    "build:plugin": "cd wordpress-plugin && ./build.sh",
